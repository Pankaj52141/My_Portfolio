{
  "functions": {
    "api/send-otp.js": {
      "runtime": "nodejs18.x"
    },
    "api/verify-otp.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}